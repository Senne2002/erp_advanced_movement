<mvc:View
    controllerName="movement.erpadvancedmovement.controller.Detail"
    xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc">

    <semantic:SemanticPage
        id="detailPage"
        busy="{detailView>/busy}"
        busyIndicatorDelay="{detailView>/delay}"
        showFooter="true">
        <semantic:titleHeading>
            <Title
                text="{MovId}"
                level="H2"/>
        </semantic:titleHeading>
        <semantic:content>

        </semantic:content>
        <!--Semantic ShareMenu Buttons-->
        <semantic:sendEmailAction>
            <semantic:SendEmailAction
                id="shareEmail"
                press=".onSendEmailPress"/>
        </semantic:sendEmailAction>

        <semantic:closeAction>
            <semantic:CloseAction
                    id="closeColumn"
                    press=".onCloseDetailPress"/>
        </semantic:closeAction>

        <semantic:fullScreenAction>
            <semantic:FullScreenAction
                    id="enterFullScreen"
                    visible="{= !${device>/system/phone} &amp;&amp; !${appView>/actionButtonsInfo/midColumn/fullScreen}}"
                    press=".toggleFullScreen"/>
        </semantic:fullScreenAction>
        <semantic:exitFullScreenAction>
            <semantic:ExitFullScreenAction
                    id="exitFullScreen"
                    visible="{= !${device>/system/phone} &amp;&amp; ${appView>/actionButtonsInfo/midColumn/fullScreen}}"
                    press=".toggleFullScreen"/>
        </semantic:exitFullScreenAction>
     <semantic:content>
     <VBox>
            <f:SimpleForm>
                <f:content>
                     <Label text="{i18n>MovId}" visible="{detailView>/new}" />
                    <Input value="{MovId}" visible="{detailView>/new}" />
                    <Label text="{i18n>MovId}" visible="{= !${detailView>/new} }" />
                    <Text text="{MovId}" visible="{= !${detailView>/new} }" />
                    <Label text="{i18n>MovType}" />
                    <Input value="{MovType}" />
                    <Label text="{i18n>MovDate}." />
                    <DatePicker value="{ path: 'MovDate', type: 'sap.ui.model.type.Date' }" displayFormat="dd.MM.yyyy" />
                    <Label text="{i18n>ChgDate}" />
                    <DatePicker value="{ path: 'ChgDate', type: 'sap.ui.model.type.Date' }" displayFormat="dd.MM.yyyy" />
                    <Label text="{i18n>ChgUser}" />
                    <Input value="{ChgUser}" />
                    <Label text="{i18n>Partner}" />
                    <Input value="{Partner}" />
                    <Label text="{i18n>Location}" />
                    <Input value="{Location}" />
                    <Label text="{i18n>Finished}" />
                    <CheckBox selected="{Finished}" />
                </f:content>
            </f:SimpleForm>
             <Table inset="false" visible="{= !${detailView>/new} }" items="{ path: 'ToMovItem' }">
                    <headerToolbar>
                        <OverflowToolbar>
                            <content>
                                <Title text="{i18n>Item}" level="H2"/>
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="{i18n>ItemID}" />
                        </Column>
                        <Column hAlign="End">
                            <Text text="{i18n>Matnr}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <ObjectIdentifier title="{ItemId}" />
                                <ObjectNumber number="{Matnr}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                </VBox>
        </semantic:content>

        <semantic:footerCustomActions>
			<Button text="Save" press="onSave" />
            <Button text="Delete" press="onDelete" visible="{= !${detailView>/new} }"/>
			<Button text="Cancel" press="onCancel" visible="{detailView>/new}"/>
        </semantic:footerCustomActions>
    </semantic:SemanticPage>

</mvc:View>